@charset "utf-8";

.tiaozhuan {
	font-size: 12px;
	float:left;
}

.tiaozhuan input{
	width: 26px;
	text-align: center;
	height: 26px;
	line-height:26px;
	border: 1px solid #c0c0c0;
	margin:0 3px;
}   
.tiaozhuan .queding{
	width:67px;
	height:28px;
	background:url(../images/paixuicon.png) -1px -1px no-repeat;
	text-align:center;
    line-height: 28px;
	
}

.tiaozhuan .queding a{
	display:inline-block;
	text-align: center;
    height: 28px;
    display: block;
}
.tiaozhuan .queding a:hover{
	color:#F00;
}

.divPagePanel {
	float:left;
	line-height:18px;
	font-size:14px;
	font-weight:bold;
}
.divPagePanel .pager {
	float:left;
	_display:inline;
}
.pager ul {
	float: left;
}
.pager ul li ,.tiaozhuan ul li{
	float: left;
	display:inline;
	white-space: nowrap;
	vertical-align: middle;
	margin:0 5px;
	height:30px;
}
.pager ul li a{
	display:block;
	float:left;
	padding:5px 9px;
	border:1px solid #CCC; 
}
.pager a:hover,.pager .page_curr{
	background-color:#A00;
	color:#FFF;
}


