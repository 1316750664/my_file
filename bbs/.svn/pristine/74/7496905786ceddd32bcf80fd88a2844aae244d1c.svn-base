package com.service.servlet;

import solr.Bean.WordCount;
import solr.SolrService.SearchWordService;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;
import java.io.UnsupportedEncodingException;
import java.util.List;

/**
 * Created by zjj on 2014/12/18
 */
@WebServlet(name = "HotLink", urlPatterns = {"/Action/HotLink.do"})
public class HotLink extends HttpServlet {
    protected void doPost(HttpServletRequest request, HttpServletResponse response) {
        PrintWriter out = null;
        Throwable exception = null;
        String errorCode = "未知错误";
        try {
            response.setHeader("content-type", "text/html;charset=utf-8");
            out = response.getWriter();

            SearchWordService searchWordService  = new SearchWordService();
            List<Object> list = searchWordService.getHotWord(28);
            StringBuilder sb = new StringBuilder();
            for(int i =0; i<list.size();i++){
                WordCount wordC = (WordCount)list.get(i);
                String name = wordC.getName();
                String indexid = wordC.getIndexid();
                sb.append(" <a href=\"javascript:void(0);\" onclick=\"moreSh(").append("'"+indexid+"'").append(",'"+name+"')\" title=\"").append(name).append("\">").append(name).append("</a>");
            }
            out.write(sb.toString());
            out.flush();

        } catch (UnsupportedEncodingException e) {
            exception = e.getCause();
            errorCode = "不支持的编码格式";
        } catch (NullPointerException e) {
            exception = e.getCause();
            errorCode = "空指针错误";
        } catch (RuntimeException e) {
            exception = e.getCause();
            errorCode = e.getMessage();
        } catch (IOException e) {
            exception = e.getCause();
            errorCode = e.getMessage();
        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            if (exception != null) {
                exception.printStackTrace();//正式环境应该删除，或转至出错页
                if (out != null) {
                    out.write("{\"error\":\"" + errorCode + "\"}");
                    out.flush();
                }
            }
        }
    }

    protected void doGet(HttpServletRequest request, HttpServletResponse response) {
        doPost(request, response);
    }

}
