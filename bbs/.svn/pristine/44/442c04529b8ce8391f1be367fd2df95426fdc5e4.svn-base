.footer .footer-forth {
    width:100%;
    color:#666;
    background-color:#eeeeee;
}

.footer .link{
    width:1003px;
    padding:8px 0px;
    text-align:center;
    color:#888;
    margin-bottom:5px;
}
.footer .footer-forth .link .end1{
    float:left;
    font-size:13px;
}
.footer .footer-forth .link .end2{
    width:900px;
